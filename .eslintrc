{
    "extends": [
        "@nuxtjs/eslint-config-typescript"
    ],
    "rules": {
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "vue/no-multiple-template-root": 0,
        "vue/multi-word-component-names": 0,
        "vue/html-closing-bracket-newline": [
            "error",
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
    }
}